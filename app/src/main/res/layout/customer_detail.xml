<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    tools:context=".Customer_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Tên khách hàng -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <!-- Avatar -->
            <View
                android:layout_width="match_parent"
                android:layout_height="137dp"
                android:layout_gravity="top|center"
                android:alpha="0.5"
                android:background="@drawable/background_avatar" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="bottom|center"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar" />

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="43dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    app:srcCompat="@drawable/back"
                    android:contentDescription="Trở về"/>
            </FrameLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Lê Văn A"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTHONGTINKHACHHANG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="THÔNG TIN KHÁCH HÀNG"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Thông tin khách hàng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="20dp">

            <!-- Dữ liệu từng dòng -->
            <!-- Copy đoạn bạn đã có trước đó (sdt, email, ngày sinh,...) -->
            <!-- Số điện thoại -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số điện thoại:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:layout_marginStart="12dp"
                    android:background="@null"
                    android:hint="Nhập số điện thoại"
                    android:inputType="phone"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:layout_marginStart="12dp"
                    android:background="@null"
                    android:hint="Nhập email"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Ngày sinh -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ngày sinh:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/etBirthday"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:layout_marginStart="12dp"
                    android:background="@null"
                    android:hint="Nhập ngày sinh"
                    android:inputType="date"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Địa chỉ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Địa chỉ:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:layout_marginStart="12dp"
                    android:background="@null"
                    android:hint="Nhập địa chỉ"
                    android:inputType="text"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Giới tính -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giới tính:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/etGender"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:layout_marginStart="12dp"
                    android:background="@null"
                    android:hint="Nhập giới tính"
                    android:inputType="text"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="168dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/btnSua"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sửa"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#03A9F4"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnLuu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lưu"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:enabled="false" />

            <Button
                android:id="@+id/btnXoa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xoá"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ✅ Nút dưới cùng -->

</androidx.constraintlayout.widget.ConstraintLayout>
