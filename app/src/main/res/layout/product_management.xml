<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8EAF6"
    android:paddingTop="100px"
    tools:context=".ui.MainActivity">

    <!-- Thanh tiêu đề -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#3F51B5"
        android:padding="8dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DANH SÁCH SẢN PHẨM"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/user"
            app:tint="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <!-- Thanh tìm kiếm -->

    <!-- RecyclerView -->

    <!-- Nút hành động -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/search_bar_bg"
            android:drawablePadding="8dp"
            android:hint="Tìm kiếm"
            android:paddingStart="12dp"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="68dp"
            android:layout_height="64dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="40px"
            android:background="@null"
            android:contentDescription="Tìm sản phẩm"
            android:padding="4dp"
            app:srcCompat="@drawable/search" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="754dp">

        <!-- Floating Action Button chính -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:contentDescription="Menu"
            android:src="@drawable/icon_menu"
            app:backgroundTint="#3F51B5" />

        <!-- Floating Button 1 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="96dp"
            android:contentDescription="Lựa chọn 1"
            android:src="@drawable/account"
            android:visibility="gone"
            app:backgroundTint="#FF4081" />

        <!-- Floating Button 2 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="176dp"
            android:contentDescription="Lựa chọn 2"
            android:src="@drawable/shop"
            android:visibility="gone"
            app:backgroundTint="#FF9800" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Danh sách sản phẩm"
            android:focusable="true"
            android:padding="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

        </androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>

</LinearLayout>
