<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F1FF"
    android:paddingTop="40dp"
    tools:context=".ui.AddProductActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4C4CF1"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Nút back ở góc trái -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/back"
                android:background="@android:color/transparent"
                android:contentDescription="Back"
                app:tint="@android:color/white" />

            <!-- Tiêu đề nằm giữa tuyệt đối -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="THÊM SẢN PHẨM"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp" />
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>


    <!-- Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Các EditText nhập liệu giống như layout trước -->
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Sản Phẩm:"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edtTenSanPham"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/editbox_background"
                android:hint="Tên sản phẩm"
                android:textColorHint="#33000000"
                android:padding="8dp"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn giá (VND):"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edtDonGia"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="number"
                android:hint="Đơn giá"
                android:textColorHint="#33000000"
                android:background="@android:drawable/editbox_background"
                android:padding="8dp"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá bán (VND):"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edtGiaBan"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="number"
                android:hint="Giá bán"
                android:textColorHint="#33000000"
                android:background="@android:drawable/editbox_background"
                android:padding="8dp"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn vị tính:"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edtDonViTinh"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Đơn vị tính"
                android:textColorHint="#33000000"
                android:background="@android:drawable/editbox_background"
                android:padding="8dp"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả:"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edtMoTa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mô tả"
                android:textColorHint="#33000000"
                android:background="@android:drawable/editbox_background"
                android:padding="8dp"
                android:minLines="3"
                android:gravity="top"
                android:inputType="textMultiLine"/>

            <!-- Nút thêm và huỷ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp">

                <Button
                    android:id="@+id/btnThem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thêm"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/btnHuy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Huỷ"
                    android:backgroundTint="#9E9E9E"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
